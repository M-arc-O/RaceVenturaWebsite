<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Stages and race end information for @Model.Name</title>
    <style>
        body {
            position: relative;
        }

        .page {
            position: relative;
            page-break-inside: avoid;
        }
    </style>
</head>
<body>
    <div class="row">
        <h1 class="m-5">Stages and race end information for @Model.Name</h1>
    </div>

    @foreach (var stage in Model.Stages)
    {
        <div class="page m-5">
            <div class="row">
                <h3>@Model.Name - Stage @stage.Number (@stage.Name) start information</h3>
            </div>

            <div class="row">
                <div class="col">
                    By scanning this QR code you will finish the previous stage and start this (@stage.Number (@stage.Name)) stage for your team. You cannot scan any points of the previous afterwards!
                </div>
                <div class="col-3">
                    <img class="float-right" src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(stage.QrCodeArray))" height="150" width="150" />
                </div>
            </div>
        </div>
    }

    <div class="page m-5">
        <div class="row">
            <h3>@Model.Name end information</h3>
        </div>
        <div class="row">
            <div class="col">
                Scan this QR code to end the race. This will register your teams finish time.
            </div>
            <div class="col-3">
                <img class="float-right" src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model.QrCodeArray))" height="150" width="150" />
            </div>
        </div>
    </div>
</body>
</html>
